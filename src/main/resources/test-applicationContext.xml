<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="userDao" class="io.spring.toby.user.dao.UserDao">
        <!--<property name="datasource" ref="mySQLConnectionMaker"/>-->
        <property name="datasource" ref="dataSource"/>
    </bean>

    <bean id="dataSource" class="org.springframework.jdbc.datasource.SimpleDriverDataSource">
        <property name="driverClass" value="com.mysql.cj.jdbc.Driver"/>
        <property name="url" value="jdbc:mysql://localhost:3306/testdb"/>
        <property name="username" value="root"/>
        <property name="password" value="springtest"/>
    </bean>

   <!-- <bean id="mySQLConnectionMaker" class="io.spring.toby.user.dao.MySQLConnectionMaker" />-->
</beans>